generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model LivestockPrice {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  categoria String
  precio    Float
  precioMax Float?
  precioMin Float?
  cabezas   Int
  fecha     String
  variacionPorcentual Float?
  weeklyVolume Int?
  createdAt DateTime @default(now())

  @@index([categoria, fecha])
}
